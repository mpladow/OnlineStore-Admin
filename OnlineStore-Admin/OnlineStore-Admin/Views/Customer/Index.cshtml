@model List<OnlineStore_Admin.Entities.Customer>


<h2>Customer List</h2>
<button class="btn btn-default" id="btnAdd" onclick="location.href='@Url.Action("Edit", "Customer")'">Add Customers</button>

@if (Model.Any())
{
<table id="Customers" class="table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Shipping</th>
            <th>Is Subscribed?</th>
        </tr>
            @foreach (var customer in Model)
            {
        <tr>

            <td>@Html.ActionLink("Edit", "Edit", "Customer", new { id = customer.CustomerId }, null)</td>
            <td>@customer.RefTitle.Name</td>
            <td>@customer.FirstName</td>
            <td>@customer.LastName</td>
            <td>
                <div>
                    @customer.StreetShippingAddress<br />
                    @customer.SuburbShippingAddress @customer.PostCodeShippingAddress<br />
                    @customer.StateShippingAddress <br />
                    @customer.CountryShippingAddress
                </div>
            </td>
            <td>@(customer.IsSubcribed ? "Yes" : "No")</td>
        </tr>
            }
    </thead>   
</table>
}
else
{
    <p>You currently have no customers.</p>
}
